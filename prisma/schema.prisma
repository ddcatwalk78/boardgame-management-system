generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  expires_at        Int?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model BoardGame {
  id              Int          @id @default(autoincrement())
  name            String
  minPlayers      Int
  maxPlayers      Int
  playTime        Int
  location        String?
  hasSleeves      Boolean      @default(false)
  isFavorite      Boolean      @default(false)
  isOwned         Boolean      @default(false)
  bggUrl          String?
  janCode         String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  requiredSleeves GameSleeve[]
  playlogs        PlayLog[]
}

model SleeveSize {
  id          Int          @id @default(autoincrement())
  name        String
  width       Float
  height      Float
  gameSleeves GameSleeve[]
  sleeves     Sleeve[]
}

model Sleeve {
  id           Int        @id @default(autoincrement())
  productName  String
  currentStock Int        @default(0)
  sizeId       Int
  size         SleeveSize @relation(fields: [sizeId], references: [id])
}

model GameSleeve {
  id           Int        @id @default(autoincrement())
  gameId       Int
  sleeveSizeId Int
  quantity     Int
  game         BoardGame  @relation(fields: [gameId], references: [id])
  sleeveSize   SleeveSize @relation(fields: [sleeveSizeId], references: [id])
}

model MobilonBand {
  id           Int     @id @default(autoincrement())
  size         String
  color        String?
  currentStock Int     @default(0)
}

model Member {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  playLogs PlayLog[] @relation("MemberToPlayLog")
}

model PlayLog {
  id       Int       @id @default(autoincrement())
  gameId   Int
  playDate DateTime  @default(now())
  notes    String?
  game     BoardGame @relation(fields: [gameId], references: [id])
  players  Member[]  @relation("MemberToPlayLog")
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  name      String
  priority  Int      @default(3)
  bggUrl    String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
